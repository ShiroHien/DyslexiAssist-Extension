{
    "manifest_version": 2,
    "name": "DyslexiAssist",
    "version": "1.0",
    "description": "Enhance web reading experience for users with dyslexia.",
    "permissions": ["activeTab", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["css/style.css"],
        "js": ["js"]
      }
    ],
    "browser_action": {
      "default_popup": "settings.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "48": "icon.png"
    }
  }
  